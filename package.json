{
  "name": "nft-scraper",
  "version": "1.0.0",
  "description": "Multi-Chain NFT Scraper with Electron Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "nft",
    "scraper",
    "blockchain",
    "ethereum",
    "solana"
  ],
  "author": "NFT Scraper Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.nftscraper.app",
    "productName": "NFT Scraper",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "ui/**/*",
      "static/**/*",
      "src/**/*",
      "web_server.py",
      "requirements.txt",
      "!**/node_modules/**/*",
      "!**/__pycache__/**/*",
      "!**/*.pyc"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/anonscraper.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "static/anonscraper.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/anonscraper.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}



